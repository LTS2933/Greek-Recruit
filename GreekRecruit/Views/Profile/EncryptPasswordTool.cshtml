@{
    ViewData["Title"] = "Encrypt SMTP Password";
}

<h2>Encrypt SMTP Password</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="EncryptPasswordTool" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label for="plainPassword" class="form-label">Enter Plaintext Password:</label>
        <input type="text" class="form-control" id="plainPassword" name="plainPassword" />
    </div>
    <button type="submit" class="btn btn-primary">Encrypt</button>
</form>
