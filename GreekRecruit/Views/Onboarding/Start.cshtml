@{
    ViewData["Title"] = "Get Started with GreekRecruit";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        background: linear-gradient(to right, #f8f9fa, #e9ecef);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .onboard-card {
        background: #ffffff;
        border-radius: 15px;
        padding: 40px 30px;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.08);
        width: 100%;
        max-width: 600px;
    }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
        }

    .form-label {
        font-weight: 500;
    }

    .form-control {
        padding: 0.75rem;
        border-radius: 8px;
    }

    .alert {
        font-size: 0.95rem;
    }
</style>

<div class="onboard-card">
    <h2 class="text-center fw-bold mb-2">Welcome to GreekRecruit</h2>
    <p class="text-center text-muted mb-4">Create your organization and start your subscription in under 2 minutes.</p>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="Start" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label for="orgName" class="form-label">Organization Name</label>
            <input type="text" class="form-control" id="orgName" name="orgName" required placeholder="e.g., Sigma Chi - Rutgers University" />
        </div>

        <div class="mb-3">
            <label for="adminEmail" class="form-label">Admin Email</label>
            <input type="email" class="form-control" id="adminEmail" name="adminEmail" required placeholder="you@example.com" />
        </div>

        <div class="d-grid mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Proceed to Payment</button>
        </div>
    </form>

    <div class="text-center mt-3">
        <a asp-controller="Login" asp-action="Login" class="btn btn-link">← Back to Login</a>
    </div>
</div>
