@{
    ViewData["Title"] = "Get Started with GreekRecruit";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        background: #f8f9fa;
    }

    .onboard-card {
        background: #ffffff;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.08);
        transition: box-shadow 0.3s ease-in-out;
    }

        .onboard-card:hover {
            box-shadow: 0 0 40px rgba(0, 0, 0, 0.1);
        }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }
</style>

<div class="container mt-5">
    <div class="mx-auto" style="max-width: 600px;">
        <div class="onboard-card">
            <h2 class="text-center mb-2 fw-bold">Welcome to GreekRecruit</h2>
            <p class="text-center text-muted mb-4">Create your organization and start your subscription.</p>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
            }

            <form asp-action="Start" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="orgName" class="form-label">Organization Name</label>
                    <input type="text" class="form-control" id="orgName" name="orgName" required placeholder="e.g., Alpha Beta Chapter" />
                </div>

                <div class="mb-3">
                    <label for="adminEmail" class="form-label">Admin Email</label>
                    <input type="email" class="form-control" id="adminEmail" name="adminEmail" required placeholder="you@example.com" />
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Proceed to Payment</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-controller="Login" asp-action="Login" class="btn btn-link">← Back to Login</a>
            </div>
        </div>
    </div>
</div>
