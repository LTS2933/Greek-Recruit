@{
    ViewData["Title"] = "Welcome";
}

<head>
    <title>@ViewData["Title"] - GreekRecruit</title>
    <link rel="icon" type="image/png" href="~/images/greekrecruit_logo.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

</head>

<style>
    body {
        background: linear-gradient(135deg, #f8f9fa, #e3eaf2);
        font-family: 'Segoe UI', sans-serif;
        overflow-x: hidden;
    }

    .landing-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 40px 20px;
        animation: fadeIn 1s ease-out forwards;
        opacity: 0;
    }

    .landing-card {
        background: #fff;
        border: none;
        border-radius: 20px;
        box-shadow: 0 0 40px rgba(0, 0, 0, 0.1);
        padding: 50px 40px;
        max-width: 600px;
        width: 100%;
        transform: translateY(50px);
        animation: slideUp 1s ease-out forwards;
        animation-delay: 0.5s;
        opacity: 0;
    }

    .landing-logo {
        height: 100px;
        margin-bottom: 20px;
        animation: popIn 1s ease-out forwards;
        animation-delay: 0.8s;
        opacity: 0;
    }

    .landing-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #0056b3;
        margin-bottom: 15px;
    }

    .landing-subtitle {
        font-size: 1.2rem;
        color: #555;
        margin-bottom: 30px;
    }

    .landing-buttons .btn {
        padding: 12px 30px;
        font-size: 1.1rem;
        font-family: 'Poppins', sans-serif;
        border-radius: 30px;
        margin: 10px;
        min-width: 150px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .landing-buttons .btn:hover {
            transform: scale(1.1);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .btn-login {
        background-color: #0056b3;
        color: white;
    }

        .btn-login:hover {
            background-color: #004494;
        }

    .btn-get-started {
        background-color: #198754;
        color: white;
    }

        .btn-get-started:hover {
            background-color: #146c43;
        }

    @@keyframes fadeIn {
        to

    {
        opacity: 1;
    }

    }

    @@keyframes slideUp {
        to

    {
        transform: translateY(0);
        opacity: 1;
    }

    }

    @@keyframes popIn {
        0%

    {
        transform: scale(0.5);
        opacity: 0;
    }

    100% {
        transform: scale(1);
        opacity: 1;
    }

    }
</style>

<div class="landing-container">
    <div class="landing-card">
        <img src="~/images/greekrecruit_logo.png" alt="GreekRecruit Logo" class="landing-logo" />

        <h1 class="landing-title">Welcome to GreekRecruit</h1>
        <p class="landing-subtitle">
            Streamline your chapter recruitment. Manage PNMs, track events, and make informed decisions — all in one powerful platform.
        </p>

        <div class="landing-buttons">
            <a asp-controller="Login" asp-action="Login" class="btn btn-login">Log In</a>
            <a asp-controller="Onboarding" asp-action="Start" class="btn btn-get-started">Get Started</a>
        </div>
    </div>
</div>
