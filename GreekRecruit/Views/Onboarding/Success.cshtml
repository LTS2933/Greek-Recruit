@{
    ViewData["Title"] = "You're All Set!";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow text-center p-4">
        <div class="card-body">
            <h2 class="card-title text-success mb-3">🎉 Thank You!</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            else
            {
                    <p class="lead">Your payment was successful.</p>
                    <p class="text-muted">A GreekRecruit admin will be reaching out shortly to finalize your organization setup.</p>
            }

            <a asp-controller="Login" asp-action="Login" class="btn btn-primary mt-3">Back to Login</a>

            <div class="mt-2">
                <small>
                    Need help? <a href="mailto:support@yourdomain.com">Contact Support</a>
                </small>
            </div>
        </div>
    </div>
</div>
